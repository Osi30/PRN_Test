        <ComboBox HorizontalAlignment="Left" Margin="262,222,0,0" VerticalAlignment="Top" Width="292"/>
        <Button x:Name="btnSave" Content="Save" HorizontalAlignment="Left" Margin="262,278,0,0" VerticalAlignment="Top" Height="48" Width="107" Style="{StaticResource ButtonStyle}" Click="btnSave_Click"/>
        <Button Content="Cancel" HorizontalAlignment="Left" Margin="447,278,0,0" VerticalAlignment="Top" Height="48" Width="107" Style="{StaticResource ButtonStyle}" Click="Button_Click"/>

    </Grid>
</Window>
