        <Label Content="Birthday" HorizontalAlignment="Left" Margin="176,134,0,0" VerticalAlignment="Top" Style="{StaticResource LabelStyle}"/>
        <Label Content="OriginCountry" HorizontalAlignment="Left" Margin="176,163,0,0" VerticalAlignment="Top" Style="{StaticResource LabelStyle}"/>
        <Label Content="Award" HorizontalAlignment="Left" Margin="176,192,0,0" VerticalAlignment="Top" Style="{StaticResource LabelStyle}"/>
        <Label Content="FootballTeam" HorizontalAlignment="Left" Margin="176,221,0,0" VerticalAlignment="Top" Style="{StaticResource LabelStyle}"/>
